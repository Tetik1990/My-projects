@model IEnumerable<Domain.Entities.OrderDetails>

@{
    ViewBag.Title = "Админ панель: редактирование товара";
    Layout = "~/Views/Shared/_Layout.cshtml";
    HtmlHelper.ClientValidationEnabled = false;
    HtmlHelper.UnobtrusiveJavaScriptEnabled = false;
}


<div class="container">
    <div class="col-lg-12 col-md-12 ">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ClientName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ClientPhoneNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ClientCity)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ClientAddressInfo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProductId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProductName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProductPrice)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProductQuantity)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TotalPrice)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DateTime)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ClientName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ClientPhoneNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ClientCity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ClientAddressInfo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductPrice)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductQuantity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TotalPrice)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateTime)
                    </td>
                    <td>

                        @Html.ActionLink("Удалить", "AdminDeleteConfirmed", new { id = item.Id })
                    </td>
                </tr>
            }

        </table>
        <div class="panel-footer">
            @Html.ActionLink("Админ страница", "AdminIndex", null, new { @class = "btn btn-default" })

        </div>
    </div>
</div>
