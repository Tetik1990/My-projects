@model IEnumerable<Domain.Entities.Book>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="panel panel-default">
    <div class="panel-heading">
        Список товаров
        @Html.ActionLink("Добавить товар", "AdminCreate", null, new { @class = "btn btn-default" })
        @Html.ActionLink("Заказы", "AdminShowOrderInfo", null, new {@class = "btn btn-default"})
        @Html.ActionLink("В магазин", "List", null, new {@class = "btn btn-default"})
        @Html.ActionLink("На главную", "Index", null, new {@class = "btn btn-default"})
        @Html.ActionLink("Прайс", "Price", null, new {@class = "btn btn-default"})

    </div>

    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th class="text-right">
                    @Html.DisplayNameFor(model => model.BookId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Author)
                </th>
                <th class="text-right">
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th class="text-center">
                    Действия
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-right">
                        @item.BookId
                    </td>
                    <td>
                        @Html.ActionLink(item.Name, "AdminEdit", new { item.BookId })
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Author)
                    </td>
                    <td class="text-right">
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td class="text-center">
                        @using (Html.BeginForm("AdminDelete", "Home"))
                        {
                            @Html.Hidden("BookId", item.BookId)
                            <input type="submit" class="btn btn-default btn-xs" value="Удалить" />
                        }
                    </td>
                </tr>
            }

        </table>
    </div>

  
    
    
</div>

