@model WebUI.Models.Prices

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}


<div class="page">
    <div class="intro" id="intro">
        <div class="container">

            @using (Html.BeginForm())
            {
             

                <div class="form-horizontal ">
                    <h3><label for="nav__link">Создание процедуры</label></h3>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <label for="nav__link">Название</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="nav__link">Цена(грн.)</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Создать" class="btn1" style="background-color: transparent; margin-bottom: 50px; "  />
                        </div>
                    </div>
                </div>
            }

            <div>
                @Html.ActionLink("Назад", "Price")
            </div>
        </div>
    </div>
</div>