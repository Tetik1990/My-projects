@model WebUI.Models.LoginModels

@{
    ViewBag.Title = "Login";
}

<div class="page">
    <div class="intro" id="intro">
        <div class="container">
            <h2>Підтвердіть, що володієте правами адміністратора</h2>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">

                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <label for="nav__link">Ваш логін</label>
                        <div class="col-md-6">
                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="nav__link">Введіть пароль</label>
                        <div class="col-md-6">
                            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-6">
                            <input type="submit" value="Увійти" class="btn1" style="background-color: transparent" />
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

